{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
, "src/app/admin/add-category/page.jsx", "src/app/admin/layout.jsx", "src/app/components/admin/Sidebar.jsx", "src/app/components/admin/Topbar.js", "src/app/admin/add-product/page.jsx", "src/app/components/AnimatedBackground.jsx", "src/app/components/home/Hero.jsx"  ],
  "exclude": ["node_modules"]
}
